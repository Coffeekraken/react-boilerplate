{
  "name": "react-boilerplate",
  "description": "React boilerplate integrated with react-scripts, redux, redux-thunk, reselect, sugar, gridle and more...",
  "version": "0.0.1",
  "private": true,
  "watch": {
    "scss": {
      "paths": "src/**/*.scss"
    }
  },
  "scripts": {
    "scss": "node-sass src -o src --include-path node_modules --include-path src/styles",
    "start": "coffeekraken-scripts-stack start-react scss browsersync styleguidist -i start",
    "start-react": "NODE_PATH=src BROWSER=none react-scripts start",
    "build": "NODE_ENV=production react-scripts build",
    "build:server": "php -S 0.0.0.0:8080 -t build/",
    "browsersync": "browser-sync start --proxy \"localhost:3000\" --port 8080 --no-open",
    "styleguidist": "npx styleguidist server",
    "test": "CI=true react-scripts test",
    "pretty-quick": "pretty-quick",
    "pretty-quick-commit": "pretty-quick --staged > /dev/null 2>&1",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint 'src/**/!(tests)/*.js'",
    "lint:css": "stylelint 'src/styles/**/*.scss'",
    "extract-messages": "node scripts/extract-messages.js"
  },
  "pre-commit": [
    "pretty-quick-commit",
    "test",
    "lint"
  ],
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "coffeekraken-gridle": "^3.0.1",
    "coffeekraken-s-button-component": "^1.0.1",
    "coffeekraken-s-dropdown-component": "^1.0.2",
    "coffeekraken-s-form-component": "^1.0.3",
    "coffeekraken-s-table-component": "^1.0.2",
    "coffeekraken-s-tooltip-component": "^1.0.4",
    "coffeekraken-s-typography-component": "^1.0.2",
    "coffeekraken-sugar": "^1.0.27",
    "connected-react-router": "^5.0.1",
    "cssuseragent": "^2.1.31",
    "history": "^4.7.2",
    "immer": "^1.8.0",
    "loadable-components": "^2.2.3",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-intl": "^2.7.2",
    "react-redux": "^5.1.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.1",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.7",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "styled-components": "^4.1.2",
    "uniqid": "^5.0.3"
  },
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "browser-sync": "^2.26.3",
    "chalk": "^2.4.1",
    "coffeekraken-scripts-stack": "^1.0.2",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "glob-all": "^3.1.0",
    "node-sass": "^4.10.0",
    "pre-commit": "^1.2.2",
    "pretty-quick": "^1.8.0",
    "react-styleguidist": "^8.0.6",
    "sort-object-keys": "^1.1.2",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
